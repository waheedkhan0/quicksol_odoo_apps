<odoo>
    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">real.estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">real.estate.property.form</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="state"/>
                        <field name="country_id"/>
                        <field name="zip_code"/>
                    </group>
                    <group>
                        <field name="property_type_id"/>
                        <field name="price"/>
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="area"/>
                        <field name="num_rooms"/>
                        <field name="num_bathrooms"/>
                        <field name="num_floors"/>
                        <field name="condition"/>
                    </group>
                    <group>
                        <field name="amenities" widget="many2many_tags"/>
                    </group>
                    <group string="Images">
                        <field name="image" widget="image"/>
                        <field name="image_gallery">
                            <tree editable="bottom">
                                <field name="image" widget="image"/>
                                <field name="description"/>
                            </tree>
                            <form string="Add Image">
                                <group>
                                    <field name="image" widget="image"/>
                                    <field name="description"/>
                                </group>
                            </form>
                        </field>
                    </group>
                    <group string="Location">
                        <field name="latitude"/>
                        <field name="longitude"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">real.estate.property.tree</field>
        <field name="model">real.estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="city"/>
                <field name="status"/>
                <field name="price"/>
            </tree>
        </field>
    </record>
</odoo>
